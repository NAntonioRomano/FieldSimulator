{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/*.o": true,
		"**/*.exe": true,
	},
	"[makefile]": {
        "editor.insertSpaces": false
	},
	"files.associations": {
		"**/*.COBOL*{,/*}": "cobol",
		"**/*.COB*{,/*}": "cobol",
		"**/*.COBCOPY*{,/*}": "cobol",
		"**/*.COPYBOOK*{,/*}": "cobol",
		"**/*.COPY*{,/*}": "cobol",
		"**/*.PL1*{,/*}": "pl1",
		"**/*.PLI*{,/*}": "pl1",
		"**/*.INC*{,/*}": "pl1",
		"**/*.INCLUDE*{,/*}": "pl1",
		"**/*.JCL*{,/*}": "jcl",
		"**/*.CNTL*{,/*}": "jcl",
		"**/*.PROC*{,/*}": "jcl",
		"**/*.ASM*{,/*}": "hlasm",
		"**/*.ASSEMBLE*{,/*}": "hlasm",
		"**/*.HLASM*{,/*}": "hlasm",
		"**/*.HLA*{,/*}": "hlasm",
		"**/*.MACLIB*{,/*}": "hlasm",
		"**/*.DBD*{,/*}": "hlasm",
		"**/*.MFS*{,/*}": "hlasm",
		"**/*.PCB*{,/*}": "hlasm",
		"**/*.EXEC*{,/*}": "rexx",
		"**/*.REXX*{,/*}": "rexx",
		"**/*.REXXINC*{,/*}": "rexx",
		"*.rex": "rexx",
		"vector": "c"
	}
}